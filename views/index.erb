<h2>Add a Shoe Store</h2>
<form action="/stores" method="post">
  <div class="form-group">
    <input id='store_name' name="store_name" placeholder='Store Name'>
  </div>
  <button type="submit" class='btn btn-info'>Add Store</button>
</form>

<h2>Current Stores</h2>
<ul>
  <% @stores.each() do |store| %>
    <li><a href='stores/<%= store.id() %>'><%= store.name() %></li>
  <% end %>
</ul>
